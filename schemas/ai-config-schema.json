{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "systemPrompt": {
      "type": "string",
      "description": "The assistant's system prompt."
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "An optional list of tool names as strings."
    }
  },
  "required": ["systemPrompt"]
}